<div class="topcoat-list">
  <h3 class="topcoat-list__header">
  	<div class="wrap">
    {{#with accomplishment}}
      <div class="header-left">
  		  <strong>{{user.firstname}} {{user.lastname}}</strong> accomplished something!
  		</div>
  		<div class="header-right">
        <div class="header-relative-date">
  			 {{ relativeDate }}
        </div>
        <div class ="header-real-hidden-date">
          {{ updated }}
        </div>
  		</div>
    {{/with}}
  	</div>
  </h3>
  <ul class="topcoat-list__container">
    {{#with accomplishment}}
    <li class="accomplishment-body topcoat-list__item">
      <div class="text-holder">
        {{text}}
      </div>
      <div class="signature">
        &mdash; {{user.firstname}} {{user.lastname}}
      </div>
    </li>
    {{/with}}

    {{#if noCommentsLoaded}}
    <li class="js-load-comments topcoat-list__item">
      Load Comments
    </li>
    {{/if}}

    {{#if loadingComments}}
    <li class="loading-comments-status topcoat-list__item">
      Loading Comments..
    </li>
    {{/if}}

    {{#if noComments}}
    <li class="loading-comments-status topcoat-list__item">
      No Comments
    </li>
    {{/if}}

    {{#each comments}}
    <li class="comment-body topcoat-list__item">
      <div class="text-holder">
        {{text}}
      </div>
      <div class="signature wrap">
        <div class="signature left signature-left">
          <div class="comment-relative-date">
            {{ relativeDate }}
          </div>
          <div class ="comment-real-hidden-date">
            {{ updated }}
          </div>
        </div>
        <div class="signature right">
          &mdash; {{user.firstname}} {{user.lastname}}
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
